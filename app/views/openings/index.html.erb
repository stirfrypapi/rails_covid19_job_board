<p id="notice"><%= notice %></p>

<h1>Openings</h1>

<table>
  <thead>
    <tr>
      <th>Employer</th>
      <th>Date posted</th>
      <th>Urgency</th>
      <th>Title</th>
      <th>Description</th>
      <th>Deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @openings.each do |opening| %>
      <tr>
        <td><%= opening.employer_id %></td>
        <td><%= opening.date_posted %></td>
        <td><%= opening.urgency %></td>
        <td><%= opening.title %></td>
        <td><%= opening.description %></td>
        <td><%= opening.deadline %></td>
        <td><%= link_to 'Show', opening %></td>
        <td><%= link_to 'Edit', edit_opening_path(opening) %></td>
        <td><%= link_to 'Destroy', opening, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

